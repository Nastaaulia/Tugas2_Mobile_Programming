<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/a"
    tools:context="nasta.tugas2praktikummobileprogramming.KRS">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KRS"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:layout_centerVertical="true"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="39dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/linearLayout3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NIM       :"
            android:textSize="18dp"
            android:id="@+id/textViewNIM"
            android:layout_weight="0.10" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/EdNIM"
            android:hint="Masukan NIM anda"
            android:layout_weight="0.52" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout3"
        android:layout_alignRight="@+id/linearLayout3"
        android:layout_alignEnd="@+id/linearLayout3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama   :"
            android:textSize="18dp"
            android:id="@+id/textViewNama"
            android:layout_weight="0.17" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/EdNamaa"
            android:hint="Masukan Nama Anda"
            android:layout_weight="0.82" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout4"
        android:layout_alignRight="@+id/linearLayout4"
        android:layout_alignEnd="@+id/linearLayout4"
        android:weightSum="1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mata Kuliah"
            android:textSize="18dp"
            android:id="@+id/textViewMatkul" />

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mobile Programming"
            android:id="@+id/CbMP"
            android:textSize="18dp"
            android:checked="false"
            android:layout_weight="0.12"
            android:onClick="pilih_matkul"
            />

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pengolahan Citra Digital"
            android:id="@+id/CbPCD"
            android:textSize="18dp"
            android:checked="false"
            android:layout_weight="0.12"
            android:layout_gravity="center_horizontal"
            android:onClick="pilih_matkul"/>

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data Mining"
            android:id="@+id/CbDM"
            android:textSize="18dp"
            android:checked="false"
            android:layout_weight="0.12"
            android:layout_gravity="center_horizontal"
            android:onClick="pilih_matkul"/>

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Praktikum Mobile Programming"
            android:id="@+id/CbPMP"
            android:textSize="18dp"
            android:checked="false"
            android:layout_weight="0.12"
            android:layout_gravity="center_horizontal"
            android:onClick="pilih_matkul"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="66dp"
        android:layout_below="@+id/linearLayout5"
        android:id="@+id/linearLayout6"
        android:layout_alignRight="@+id/linearLayout5"
        android:layout_alignEnd="@+id/linearLayout5">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:id="@+id/btnSubmit"
            android:layout_gravity="center_horizontal"
            android:layout_alignBottom="@+id/linearLayout6"
            android:layout_alignRight="@+id/linearLayout5"
            android:layout_alignEnd="@+id/linearLayout5" />
    </LinearLayout>
</RelativeLayout>
